<%= render "shared/backBar" %>
<div class="container mt-6 pt-4">
  <div class= "d-flex justify-content-between align-items-center">
    <h4 class="text-center" style="font-weight: bold">My Bookings</h4>
    <%= link_to "Search for a book", root_path, class: "btn btn-primary " if @orders.length > 0 %>

  </div>

    <% if @orders.length > 0 %>
      <div class="dashboard-order-container">
        <% @orders.each do |order|  %>
          <%= render 'shared/order_card', order: order %>
        <% end %>
      </div>
    <% else %>
      <h6>No books ordered...... yet!.</h6>
      <h6>Time to find your first book. Let the journey begin with Book Buddies...</h6>
      <%= link_to "Search for a book", root_path, class: "btn btn-primary"%>
    <% end %>
    <hr style="border-top: 1px solid #383232">
    <div class= "d-flex justify-content-between align-items-center">
      <h4 class="text-center" style=" font-weight: bold;">My Books</h4>
      <div>
          <%= link_to "Add a new Book", books_path, class: "btn btn-primary" if @book_copies.length > 0 %>
      </div>
    </div>
    <% if @book_copies.length > 0 %>
      <div class="dashboard-order-container">
      <div class="row col">
      <% @book_copies.each do |book_copy|  %>
        <%= render 'shared/my_book_card', book_copy: book_copy %>
      <% end %>
      </div>
      </div>
      <% else %>
      <h6>No books added...... yet!.</h6>
      <h6>Share your first book from here.</h6>
      <%= link_to "Add a new Book", books_path, class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
