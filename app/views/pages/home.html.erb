<div class="container">

<input id="search" autocomplete="off" placeholder="Search for books...">

  <div class="book-category-container">
    <div class="book-category-label">Horror</div>
    <div class="book-category-label">Horror</div>
    <div class="book-category-label">Horror</div>
    <div class="book-category-label">Crime</div>
  </div>

  <div class="book-container">
    <% @books.each do |book| %>
      <div class= "book-container-card">
        <%= link_to book_path(book) do%>
          <%= image_tag book.photo_url, crop: "fill" %>
          <div class="container pt-1">
            <h6><strong><%= book.title %></strong></h6>
            <p><%= book.author %></p>

          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "test create", new_book_copy_path, class: "btn-primary"%>
</div>

<button id="myBtn">Modal</button>

<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p>Some text in the Modal..</p>
  </div>

</div>

<script>
// Get the modal
var modal = document.getElementById("myModal");

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal
btn.onclick = function() {
  modal.style.display = "block";
}

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    modal.style.display = "none";
  }
}
</script>

</body>
</html>
