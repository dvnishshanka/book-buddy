<div class="navbar">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("/assets/logo-crop.png", class: "navbar-brand", alt: "Book-Buddy logo") %>
  <% end %>

  <div class="search">
    <%= form_with url: root_path, method: :get, html: { data: { search_books_target: "form"}} do |f| %>

      <%= f.text_field :query,
                    value: params[:query],
                    class: "search-bar",
                    placeholder: "Find a book",
                    data: {
                      search_books_target: "input",
                      action: "keyup->search-books#update" }
                    %>

    <% end %>
  </div>

  <div class="book-category-container">
    <% categories = Book.all.map{|t| t.category}.uniq%>
    <%categories.each do |category|%>
      <%= link_to category, root_path(:category => "fiction"), class: "filter-button"  %>
    <% end %>
  </div>


</div>
