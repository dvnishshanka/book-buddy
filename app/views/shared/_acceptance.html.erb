<div  data-controller="realtime" data-realtime-target="body">
  <% if order.status == "CREATED" %>
    <p class="dashboard-order-status" ><strong><i class="fa-solid fa-book-open"></i> Requested</strong></p>
    <%= link_to "Accept ✅", accept_order_path(order), data: {turbo_method: :patch,  action: "click->realtime#send"}, class: "normal-link", style: "text-decoration: underline;"   %>
    <%= link_to "Reject ❌", reject_order_path(order), data: {turbo_method: :patch,  action: "click->realtime#send"}, class: "normal-link", style: "text-decoration: underline;"  %>

  <% elsif order.status == "ACCEPTED"%>
  <p class="dashboard-order-status" style="background-color:lightgreen;"><strong><i class="fa-solid fa-book-open"></i> Accepted</strong></p>
  <%= link_to "Reject ❌", reject_order_path(order), data: {turbo_method: :patch,  action: "click->realtime#send"},class: "normal-link", style: "text-decoration: underline;" %>
  <% elsif order.status == "REJECTED"%>
  <p class="dashboard-order-status" style="background-color:red"><strong><i class="fa-solid fa-book"></i> Rejected</strong></p>
    <%= link_to "Re-Accept ✅", accept_order_path(order), data: {turbo_method: :patch, action: "click->realtime#send"}, class: "normal-link", style: "text-decoration: underline;"  %>
  <% end %>
</div>
