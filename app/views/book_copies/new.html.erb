<div class="container">
  <div class="row justify-content-center">
    <div class="col-11 col-sm-8 col-md-8 form-login">
    <h6 class="text-center"><strong>Add "<%= @book.title %>"</strong></h6>
    <%= image_tag @book.photo_url, crop: "fill", class: "image-center" %>
    <%= simple_form_for [@book, @book_copy] do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :availability_status, :collection => ['Swap','Rent','Sell'] %>
        <%= f.input :price,
                  autofocus: true,
                  input_html: { autocomplete: "price" }%>
        <%= f.input :comments,
                  autofocus: true,
                  input_html: { autocomplete: "comments" }%>
        <%= f.input :photo, as: :file %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Add", class: "btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
