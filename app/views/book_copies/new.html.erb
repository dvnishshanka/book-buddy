<%= render "shared/backBar" %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-11 col-sm-8 col-md-8 form-login">
    <h6 class="text-center"><strong>Add "<%= @book.title %>"</strong></h6>
    <%= image_tag @book.photo_url, crop: "fill", class: "image-center" %>
    <%= simple_form_for [@book, @book_copy] do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs mt-3 pt-3">
      <%= f.label(:availability_status, "Book is available for: ") %>
      <br>
        <%= f.collection_radio_buttons :availability_status,  [['Rent', 'Rent'], ['Swap', 'Swap'],['Sell','Sell']],:first, :last %>
        <br>
        <br>
        <%= f.input :price,
                  placeholder: 'Add the â‚¬ price here',
                  autofocus: true,
                  input_html: { autocomplete: "price" }%>
        <%= f.input :condition,prompt: 'Rate the condition of the book', :collection => [["1 - Very poor",1], ["2 - Poor", 2], ["3 - Satisfactory", 3], ["4 - Good", 4], ["5 - Very good ", 5]] %>
        <%= f.input :comments,
                  label: "Any special comments",
                  autofocus: true,
                  placeholder: 'Add any comments here',
                  input_html: { autocomplete: "comments" }%>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Add", class: "btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
