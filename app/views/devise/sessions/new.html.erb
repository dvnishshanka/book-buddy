<div class="container">
  <div class="row justify-content-center" style="height: 90vh">
    <div class="col-11 col-sm-6 col-md-4 form-login ">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "bob@gmail.com",
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      placeholder: "•••••••••••••••",
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
